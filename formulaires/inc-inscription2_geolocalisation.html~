<div class="formulaire_spip formulaire_localisation" id="localisation">
#ENV{code_postal}
	<BOUCLE_commune(GEOLOCALITES){code_postal=#ENV{code_postal,-1}}>
	#SET{titre,#TITRE}	#SET{id_mot,#ID_GEOLOCALITE} #SET{titre2,#TITRE**}
	</BOUCLE_commune>
	[(#TOTAL_BOUCLE|=={1}|oui)#SET{form,non} #SET{titre,#GET{titre}} #SET{id_commune,#GET{id_mot}}]
	[(#TOTAL_BOUCLE|>{1}|oui)#SET{form,oui}]
	</B_commune>	
	
	#GET{id_commune} 
	#GET{id_mot} 	
	<form action='[(#SELF|parametre_url{id_commune=#GET{id_commune}})]#formulaire_inscription2' method='post'>
		<ul>	
			<li class="editer_adresse[ (#CONFIG{inscription2/adresse_obligatoire}|=={on}|oui)obligatoire][ (#ENV**{erreurs}|table_valeur{adresse}|oui)erreur]">
				<label for="adresse"><:inscription2:adresse:></label>
					<textarea name="adresse" class="textarea" id="adresse" rows="2" cols="20">#ENV{adresse}</textarea>
					[<p class='erreur'>(#ENV**{erreurs}|table_valeur{adresse})</p>]
			</li>
			
			<li class="editer_pays[ (#CONFIG{inscription2/pays_obligatoire}|=={on}|oui)obligatoire][ (#ENV**{erreurs}|table_valeur{pays}|oui)erreur]">
					<label for="pays"><:inscription2:pays:></label>
						<select id="pays" style="width:auto;" name="pays" select onmousewheel="return false" onchange="document.location.href='[(#SELF|parametre_url{pays,''})]&pays='+this.options[this.selectedIndex].value;this.focus();">
							<option value="rien"><:encheres:choisir_pays:></option>
							<BOUCLE_pays(GROUPES_MOTS){id_parent=35}>	
							<option value="#ID_GROUPE" [(#ENV{pays}|=={#ID_GROUPE}|?{"selected="selected"})]>#TITRE</option>
							</BOUCLE_pays>	
						</select>
						[<p class='erreur'>(#ENV**{erreurs}|table_valeur{pays})</p>]
						<noscript><input type="submit" class="submit confirmer" name="choix_pays" value="ok"></noscript>	
			</li>			
			<INCLURE{fond=formulaires/inscription2_regions}{env}/>
				
			<li class="editer">
			<B_cp>												
				<span class="editer_code_postal obligatoire [ (#ENV**{erreurs}|table_valeur{code_postal}|oui)erreur]" style="float:left; width:100px;">
					<label for="code_postal"><:inscription2:code_postal:></label>
					<select id="code_postal" style="width:auto;" name="code_postal"  onchange="document.location.href='[(#SELF|parametre_url{code_postal,''})]&code_postal='+this.options[this.selectedIndex].value;this.focus();">							
							<BOUCLE_cp(MOTS){id_groupe=#ENV{region}} {par code_postal}>	
							[<option value="#CODE_POSTAL" [(#ENV{code_postal}|=={#CODE_POSTAL}|?{"selected="selected"})]>(#CODE_POSTAL|unique)</option>]
							</BOUCLE_cp>	
					</select>
					[<p class='erreur'>(#ENV**{erreurs}|table_valeur{code_postal})</p>]
				</span>
			</B_cp>																		
			<span class="editer_id_commune[ (#CONFIG{inscription2/ville_obligatoire}|=={on}|oui)obligatoire][ (#ENV**{erreurs}|table_valeur{ville}|oui)erreur]" style="float:left; width:300px;">
				<label for="ville"><:inscription2:ville:></label>					
					[(#GET{form}|=={non}|oui)#SET{id_commune,#GET{id_mot}} #GET{titre}]
					[(#GET{form}|=={oui}|oui)<INCLURE{fond=formulaires/inscription2_commune}{env}{ajax}> #SET{id_commune,#ENV{id_commune}}]		[<p class='erreur'>(#ENV**{erreurs}|table_valeur{ville})</p>]
				</span>											
			</li>
	</ul>
		<BOUCLE_ville(MOTS){id_mot=#GET{id_commune}}>
	    <p class="boutons">
		    <input type="hidden"  name='id_commune" value="#GET{id_commune}" />			    
		    <input type="hidden" name="ville" value="[(#GET{titre2})]" />
		    <input type="submit" class="submit confirmer" value="<:bouton_valider:>" />
	    </p>			    
		 </BOUCLE_ville> 
	</form>
</div>